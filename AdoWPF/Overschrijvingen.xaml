<Window x:Class="AdoWPF.Overschrijvingen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Overschrijvingen" Height="300" Width="300">
    <DockPanel>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal" Margin="20 30 0 0">
                <Label Content="Van rekening Nr: " Width="110"></Label>
                <TextBox Name="textBoxVanRekNr" Width="150"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="20 10 0 0">
                <Label Content="Naar rekening Nr: " Width="110"></Label>
                <TextBox Name="textBoxNaarRekNr" Width="150"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="20 10 0 0">
                <Label Content="Bedrag: " Width="110"></Label>
                <TextBox Name="textBoxBedrag" Width="150"></TextBox>
            </StackPanel>
            <Button Name="buttonOverschrijven" Content="Overschrijven" HorizontalAlignment="Right"  Width="125" Margin="0 20 10 0" Click="buttonOverschrijven_Click"></Button>
            <Label Name="labelStatus" Content="Leeg maken" Margin="20 20 20 0"></Label>
        </StackPanel>
    </DockPanel>
</Window>

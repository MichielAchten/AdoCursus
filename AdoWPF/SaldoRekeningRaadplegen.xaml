<Window x:Class="AdoWPF.SaldoRekeningRaadplegen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SaldoRekeningRaadplegen" Height="300" Width="300">
    <DockPanel>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Label Margin="25 20 0 20" Content="Rekening Nr:" Width="100"></Label>
                <TextBox Name="TextBoxRekeningNr" Margin="0 20 0 20" Width="100"></TextBox>
            </StackPanel>
            <Button Name="SaldoButto" Margin="125 20 40 20" Content="Saldo" Click="SaldoButto_Click"></Button>
            <Label Name="LabelStatus" Margin="25 20 0 20" Width="100" Height="24" HorizontalAlignment="Left"></Label>
        </StackPanel>
    </DockPanel>
</Window>

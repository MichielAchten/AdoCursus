<Window x:Class="AdoWPF.RekeningInfoRaadplegen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RekeningInfoRaadplegen" Height="300" Width="500">
    <DockPanel>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Label Margin="25 20 0 20" Content="Rekening Nr:" Width="175" 
                       HorizontalContentAlignment="Center"></Label>
                <TextBox Name="TextBoxRekeningNr" Margin="0 20 0 20" Width="200"></TextBox>
            </StackPanel>
            <Button Name="InfoButton" Margin="150 10 40 10" Content="Saldo" Click="InfoButton_Click"
                    Width="200" Height="24"></Button>
            <Label Name="LabelSaldo" Margin="200 10 0 10" Width="200" Height="24" HorizontalAlignment="Left"></Label>
            <Label Name="LabelNaam" Margin="200 10 0 10" Width="200" Height="24" HorizontalAlignment="Left"></Label>
            <Label Name="LabelStatus" Margin="30 10 0 10" Width="425" Height="24" HorizontalAlignment="Left"></Label>
        </StackPanel>
    </DockPanel>
</Window>

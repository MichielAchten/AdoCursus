<Window x:Class="AdoWPF.KlantToevoegen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KlantToevoegen" Height="250" Width="300">
    <DockPanel>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal" Margin="20 30 10 0">
                <Label Content="Naam: " Width="115"></Label>
                <TextBox Name="textBoxNaam" Width="135"></TextBox>
            </StackPanel>
            <Button Name="buttonToevoegen" Content="Toevoegen" Margin="135 30 20 0" Click="buttonToevoegen_Click"></Button>
            <Label Name="labelStatus" Margin="135 30 20 0" Height="24"></Label>
        </StackPanel>
    </DockPanel>
</Window>
